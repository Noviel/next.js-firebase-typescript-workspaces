{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "lib": ["dom", "es7", "webworker"],
    "baseUrl": "./packages/",
    "paths": {
      "@game/*": ["./*"]
    },
  },
  "files": [
    "custom.d.ts",
    "global.d.ts"
  ]
}