{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "lib": ["dom", "es7", "webworker"],
    "baseUrl": "./packages/",
    "paths": {
      "@project/*": ["./*"]
    },
  }
}